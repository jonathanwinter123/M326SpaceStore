@using System.Configuration
@using SpaceStorium.Models
@{
    ViewBag.Title = "Home Page";
}

@model List<Product>

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @foreach (Product product in this.Model)
        {
            <div class="col-md-2">
                <img src="@product.ImgUrl" alt="@product.Name" class="img-rounded img-responsive">
            </div>
            <div class="col-md-8">
                <h3 class="font-weight-bold">@product.Name, @product.Type</h3>
                <br/><h5>@product.Discovery</h5>
            </div>
            <h5 class="col-md-2 font-weight-bold" style="color: #A7263B;">@product.Price</h5>
        }
    </div>
    <div class="col-md-2"></div>

</div>